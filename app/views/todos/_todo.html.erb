<li id="<%= "#{dom_id(todo)}_item" %>" class="py-3">
  <%= turbo_frame_tag dom_id(todo) do %>
    <div class="flex items-center justify-between">
      <%= link_to todo.title, edit_todo_path(todo), class: "#{"line-through opacity-50" if todo.complete?}" %>
      <div class="flex items-center space-x-3">
        <% if todo.complete? %>
          <%= button_to 'Mark Incomplete', todo_path(todo, todo: {status: :incomplete}),
           method: :patch, class: "mark-incomplete" %>
        <% else %>
          <%= button_to 'Mark Complete', todo_path(todo, todo: {status: :complete}), 
          method: :patch, class: "mark-complete" %>
        <% end %>
        <%= button_to 'Delete', todo, method: :delete,
     class: 'bg-red-50 px-3 py-2 rounded inline-flex items-center justify-center text-red-600' %>
      </div>
    </div>
  <% end %>
</li>
